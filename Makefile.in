#######################################################
# installed directories
#######################################################
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datadir=@datadir@
mandir=@mandir@
sharedstatedir=@sharedstatedir@
sysconfdir=@sysconfdir@/clover3
includedir=@includedir@/clover3
datarootdir=@datarootdir@/clover3
docdir=@datadir@/doc
libdir=@libdir@


##########################################################
# environmnet variables
##########################################################
CC=@CC@
INSTALL=@INSTALL@
CFLAGS=@CFLAGS@
LIBS=@LIBS@
OS=@OS@
DESTDIR=@DESTDIR@
OBJS=@OBJS@
COMPILER_OBJS=@COMPILER_OBJS@

##########################################################
# main
##########################################################
all: clover3 core

core: core.ss
	./clover3 -core core.ss

clover3: config.h src/*.h Makefile configure src/main.o src/compiler.o src/interpreter.o src/parser.o src/node.o src/type.o src/class.o src/native.o src/native2.o src/native3.o src/native4.o src/native5.o src/native6.o src/vm.o src/vtable.o src/heap.o src/object.o src/block.o src/macro.o
	clang -o clover3 src/main.o src/compiler.o src/interpreter.o src/parser.o src/node.o src/type.o src/class.o src/native.o src/native2.o src/native3.o src/native4.o src/native5.o src/native6.o src/vm.o src/vtable.o src/heap.o src/object.o src/block.o src/macro.o $(CFLAGS) $(LIBS)

##########################################################
# objects
##########################################################
src/main.o: config.h src/*.h Makefile configure src/main.c
	neo-c src/main.c $(CFLAGS) 
	clang -c -o src/main.o src/main.c.ll

